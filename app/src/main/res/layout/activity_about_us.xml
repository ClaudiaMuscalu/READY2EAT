<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_about_us"
    tools:context=".AboutUs">
    <RelativeLayout
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/top_image"
        android:background="#faf5e4"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Aplicatie de precomanda si preluare comanda"
            >

        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/section2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#f7efd2"
        app:layout_constraintTop_toBottomOf="@id/section1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vii direct la preluarea comenzii si poti manca chiar la restaurant">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/section3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/section2"
        android:background="#faf5e4"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mancare calda, proaspata, preluata chiar cand vrei tu">
        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
        </ImageView>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>